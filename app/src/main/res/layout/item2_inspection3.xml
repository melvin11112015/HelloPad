<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/la2_item_inspection3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv2_item_inspection3_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="center"
        android:singleLine="true"
        android:text="11"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv2_item_inspection3_property"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center"
        android:singleLine="true"
        android:text="特别特性"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:textIsSelectable="true"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv2_item_inspection3_specification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center"
        android:singleLine="true"
        android:text="规格"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:textIsSelectable="true"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv2_item_inspection3_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:singleLine="true"
        android:text="备考"
        android:textColor="@android:color/background_dark"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner2_item_inspection3_confirm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:entries="@array/okstate"
        android:gravity="center"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et2_item_inspection3_value1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:gravity="center"
        android:hint="Value1"
        android:singleLine="true"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:id="@+id/spinner2_item_inspection3_confirm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:entries="@array/okstate"
        android:gravity="center"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et2_item_inspection3_value2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:gravity="center"
        android:hint="Value2"
        android:singleLine="true"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:id="@+id/spinner2_item_inspection3_confirm3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:entries="@array/okstate"
        android:gravity="center"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et2_item_inspection3_value3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:gravity="center"
        android:hint="Value3"
        android:singleLine="true"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:id="@+id/spinner2_item_inspection3_confirm4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:entries="@array/okstate"
        android:gravity="center"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et2_item_inspection3_value4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:gravity="center"
        android:hint="Value4"
        android:singleLine="true"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:id="@+id/spinner2_item_inspection3_confirm5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:entries="@array/okstate"
        android:gravity="center"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et2_item_inspection3_value5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:gravity="center"
        android:hint="Value5"
        android:singleLine="true"
        android:textColor="@android:color/background_dark" />

</LinearLayout>