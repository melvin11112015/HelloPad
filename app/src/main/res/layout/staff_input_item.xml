<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:width="70dp"
            android:text="返回" />


        <Button
            android:id="@+id/btn_staffInput_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:width="70dp"
            android:text="提交" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改配员信息"
            android:textColor="#000000"
            android:textSize="38dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal" />

    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vll_1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="姓名"
                        android:enabled="false"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Day_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="白班加班申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Day_Temp_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="白班临时加班申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Night_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="夜班加班申请"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Night_Temp_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="夜班临时加班申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Leave_Category_Code"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="请假说明"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vll_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:orientation="vertical"
                    android:scrollbars="vertical"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:enabled="false"
                        android:layout_gravity="bottom"
                        android:gravity="bottom" />

                    <CheckBox
                        android:id="@+id/cb_Over_Time_Day_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Over_Time_Day_Temp_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Over_Time_Night_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Over_Time_Night_Temp_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <!--  <EditText
                        android:id="@+id/et_Leave_Category_Code"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="18sp" />-->

                    <Spinner
                        android:id="@+id/sp_Leave_Category"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"></Spinner>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:id="@+id/vll_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/tv_Routing"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="工序"
                        android:enabled="false"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="加班申请"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Day"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="白班加班时间"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Day_Temp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="白班临时加班时间"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Night"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="夜班加班时间"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Over_Time_Night_Temp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="夜班临时加班时间"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Leave_Hours"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="休假时间"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vll_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <Spinner
                        android:id="@+id/sp_Worker_Position"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|end"
                        android:textAlignment="gravity"
                        android:paddingBottom="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="6dp" />

                    <CheckBox
                        android:id="@+id/cb_Over_Time_Request"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/et_Over_Time_Day"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:selectAllOnFocus="true"
                        android:inputType="numberDecimal"
                        android:layout_gravity="center"
                        android:gravity="bottom" />

                    <EditText
                        android:id="@+id/et_Over_Time_Day_Temp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:selectAllOnFocus="true"
                        android:inputType="numberDecimal"
                        android:layout_gravity="center"
                        android:gravity="bottom" />

                    <EditText
                        android:id="@+id/et_Over_Time_Night"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:gravity="bottom|left"
                        android:inputType="textPersonName|numberDecimal"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/et_Over_Time_Night_Temp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:gravity="bottom|left"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/et_Leave_Hours"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center"
                        android:gravity="bottom" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/vll_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/tv_Working_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="缺省定时"
                        android:textColor="#000000"
                        android:textSize="16sp"
                         />

                    <TextView
                        android:id="@+id/tv_Over_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="加班时间"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Meal_Allowance_Day_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="白班餐补申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Allowance_Day_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="白班补助申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Meal_Allowance_Night_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="夜班餐补申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Allowance_Night_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="夜班补助申请"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                    <TextView
                        android:id="@+id/tv_Support_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="bottom|right"
                        android:text="支援时间"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vll_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <EditText
                        android:id="@+id/et_Working_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:gravity="bottom|left"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:selectAllOnFocus="true"
                        >
                    </EditText>

                    <EditText
                        android:id="@+id/et_Over_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:visibility="visible"
                        android:layout_gravity="bottom"
                        android:gravity="bottom" />

                    <CheckBox
                        android:id="@+id/cb_Meal_Allowance_Day_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Allowance_Day_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Meal_Allowance_Night_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:checked="false"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Allowance_Night_Req"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cb_Support_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:checked="false"
                        android:gravity="bottom|left"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_Leave_Category_Description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:text="请假说明"
                android:textColor="#000000"
                android:textSize="16dp"
                android:paddingRight="5dp" />

            <EditText
                android:id="@+id/et_Leave_Category_Description"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:gravity="bottom|left"
                android:textColor="#000000"
                android:textSize="16dp"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal|right"
                android:text="备注"
                android:textColor="#000000"
                android:textSize="16dp"
                android:paddingRight="5dp"
                android:layout_marginBottom="30dp" />

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:background="@drawable/remark"
                android:gravity="left|top"
                android:textColor="#000000"
                android:textSize="16dp"
                android:selectAllOnFocus="true"
                android:padding="5dp"
                android:layout_marginBottom="30dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>