<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginRight="20dp"
            android:text="lilyxxxx"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/tv_date"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:textColor="#0099CC" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="返回" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="2016-1-20"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/tv_username" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="23:44:55"
            android:textSize="20sp"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="right"
            android:layout_below="@+id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期日"
            android:textSize="20sp"
            android:layout_below="@+id/tv_username"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_marginRight="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:paddingTop="100dp"
            android:paddingBottom="100dp">

            <Button
                android:id="@+id/btn_workDaily"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:text="作业日报"
                android:layout_gravity="center"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:textColor="#FFFFFF"
                android:textSize="34dp"
                android:singleLine="true"
                android:background="@drawable/round"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />

            <Button
                android:id="@+id/btn_staff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_reworkingConfirmed"
                android:layout_below="@+id/btn_reworkingConfirmed"
                android:layout_weight="1"
                android:text="配员录入"
                android:layout_gravity="center"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/round"
                android:textSize="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />

            <Button
                android:id="@+id/btn_conduction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_workDaily"
                android:layout_below="@+id/btn_workDaily"
                android:layout_gravity="center"
                android:singleLine="false"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:textColor="#FFFFFF"
                android:textSize="34dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:layout_marginRight="25dp"
                android:text="生产状态"
                android:layout_marginLeft="25dp" />

            <Button
                android:id="@+id/btn_reworkingConfirmed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_conduction"
                android:layout_below="@+id/btn_conduction"
                android:layout_weight="1"
                android:text="加工条件    确认"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/round"
                android:textSize="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>